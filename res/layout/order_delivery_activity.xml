<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="15dp"
	        android:text="请仔细核对物品和收货人信息，确保无误！"
	        android:textColor="#ef6472"
	        android:textSize="15sp" />
	
	    <EditText
	        android:id="@+id/log_company"
	        android:layout_width="fill_parent"
	        android:layout_height="32dp"
	        android:layout_marginBottom="15dp"
	        android:background="@drawable/circle_circle_rond_n"
	        android:gravity="center_vertical"
	        android:hint="物流公司"
	        android:padding="5dip"
	        android:textColor="@color/application_black"
	        android:textColorHint="@color/application_deep_gray_black"
	        android:textSize="@dimen/sixteen" />
	        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
	        <EditText
	            android:id="@+id/log_sn"
	            android:layout_width="wrap_content"
	            android:layout_height="32dp"
	            android:layout_marginBottom="20dip"
	            android:layout_weight="1"
	            android:background="@drawable/circle_circle_rond_n"
	            android:gravity="center_vertical"
	            android:hint="物流单号"
	            android:padding="5dip"
	            android:textColor="@color/application_black"
	            android:textColorHint="@color/application_deep_gray_black"
	            android:textSize="@dimen/sixteen" />
	    
	        <Button
	            android:id="@+id/scan_log_sn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:background="@color/transparent"
	            android:gravity="center"
	            android:text="扫描" />
	        
	    </LinearLayout>
   
    </LinearLayout>
    
</LinearLayout>
