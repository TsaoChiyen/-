<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_charge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical"
    android:visibility="visible" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp" >

        <TextView
            android:id="@+id/text_my_coins"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="我的剩余芯币" />

        <TextView
            android:id="@+id/btn_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="充值"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_charge"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_charge"
            android:layout_toRightOf="@id/text_my_coins"
            android:layout_weight="1"
            android:background="@drawable/circle_circle_rond_n"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="0"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="5dip"
            android:textColor="@color/application_black"
            android:textColorHint="@color/application_deep_gray_black"
            android:textSize="@dimen/sixteen" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dp"
            android:text="充值提示: 目前苡币价格"
            android:textColor="@color/application_deep_gray_black"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/text_prompt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="26dp"
            android:text="10芯币＝1人民币"
            android:textColor="@color/application_deep_gray_black"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>