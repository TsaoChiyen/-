<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:background="@drawable/cirle_edit_bg" >

        <EditText
            android:id="@+id/bank"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/bank_name_hint"
            android:paddingLeft="5dp"
            android:textColor="#808080"
            android:textColorHint="#808080"
            android:textSize="@dimen/login_username_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:background="@drawable/cirle_edit_bg" >

        <EditText
            android:id="@+id/bankuser"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/bank_user_hint"
            android:paddingLeft="5dp"
            android:textColor="#808080"
            android:textColorHint="#808080"
            android:textSize="@dimen/login_username_text_size" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:background="@drawable/cirle_edit_bg" >
        
            <EditText
                android:id="@+id/bankcard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/bank_account_hint"
                android:paddingLeft="5dp"
                android:textColor="#808080"
                android:textColorHint="#808080"
                android:textSize="@dimen/login_username_text_size" />
        
    </RelativeLayout>

</LinearLayout>
