<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_name"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_name"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_name_input"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_type"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_type"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_type_input"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/application_gray"
                    android:orientation="horizontal" >

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_amount"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_amount"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_amount_sel"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_total_input"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_limit"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_limit"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_limit_sel"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_prodinfo_months"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_loan_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_time"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_loan_time"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_time_sel"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/text_loan_time"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_day"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_monthly"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="@string/financ_proinfo_monthly"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_monthly"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_monthly_input"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/text_monthly"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_month_repay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_repay"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_month_repay"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_repay_input"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/TextView16"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_yuan"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_total_money"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="@string/financ_proinfo_total"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_total_money"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_total_price"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/text_total_money"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_total_input"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_repay_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_repay_mode"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_repay_mode"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_repay_mode_input"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/text_repay_mode"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/application_gray"
                    android:orientation="horizontal" >

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_client_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_client"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_client_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_client_sel"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" >

                        <requestFocus />
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_material"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_material"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_material"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_material_sel"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_other"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_other"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_other_input"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_condition"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_condition"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_condition_input"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/application_gray"
                    android:orientation="horizontal" >

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_locate"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="@string/financ_proinfo_locate"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_locate"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_locate_click"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_service"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/edit_service"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/circle_circle_rond_n"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:hint="@string/financ_proinfo_service_sel"
                        android:imeOptions="actionNext"
                        android:padding="5dip"
                        android:textColor="@color/application_black"
                        android:textColorHint="@color/application_deep_gray_black"
                        android:textSize="@dimen/sixteen" />

                    <TextView
                        android:id="@+id/text_service"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/financ_proinfo_km"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/application_gray"
                    android:orientation="horizontal" >

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="15dp" >

                <include layout="@layout/bidding_frame_view" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="15dp" >

                <include layout="@layout/chengxin_coin_charge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="40dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp" >

                <Button
                    android:id="@+id/btn_submit"
                    style="@style/actionbar_def_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/financ_proinfo_ok"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>