<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" >

                <TextView
                    android:id="@+id/text_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text="公司名称"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_company"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_company"
                    android:layout_weight="1"
                    android:background="@drawable/circle_circle_rond_n"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="公司名称"
                    android:imeOptions="actionNext"
                    android:padding="5dip"
                    android:textColor="@color/application_black"
                    android:textColorHint="@color/application_deep_gray_black"
                    android:textSize="@dimen/sixteen" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" >

                <TextView
                    android:id="@+id/text_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text="公司地址"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_address"
                    android:layout_weight="1"
                    android:background="@drawable/circle_circle_rond_n"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="公司地址"
                    android:imeOptions="actionNext"
                    android:padding="5dip"
                    android:textColor="@color/application_black"
                    android:textColorHint="@color/application_deep_gray_black"
                    android:textSize="@dimen/sixteen" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" >

                <TextView
                    android:id="@+id/text_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:text="服务城市"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_city"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text_city"
                    android:layout_weight="1"
                    android:background="@drawable/circle_circle_rond_n"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="服务城市"
                    android:imeOptions="actionNext"
                    android:padding="5dip"
                    android:textColor="@color/application_black"
                    android:textColorHint="@color/application_deep_gray_black"
                    android:textSize="@dimen/sixteen" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" >

                <TextView
                    android:id="@+id/text_shop_paper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="金融服务证件"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/image_shop_paper"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/text_shop_paper"
                    android:background="@color/application_gray"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_icon_btn" />

                <TextView
                    android:id="@+id/text_shop_paper_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_shop_paper"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/image_shop_paper"
                    android:text="工作证、工作证件（图片）"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/application_gray_black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" >

                <TextView
                    android:id="@+id/text_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="个人身份证"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/image_id_card"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/text_id_card"
                    android:background="@color/application_gray"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_icon_btn" />

                <TextView
                    android:id="@+id/text_id_card_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_id_card"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/image_id_card"
                    android:text="（图片）"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/application_gray_black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp" >

                <TextView
                    android:id="@+id/text_certification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="从业资格证书"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/image_certification"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/text_certification"
                    android:background="@color/application_gray"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add_icon_btn" />

                <TextView
                    android:id="@+id/text_certification_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_certification"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/image_certification"
                    android:text="（图片）"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/application_gray_black"
                    android:textSize="14sp" />
            </RelativeLayout>

			<include layout="@layout/chengxin_coin_charge" />
			
			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_submit"
                    style="@style/actionbar_def_style"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="确定修改"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>