<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <LinearLayout
            android:id="@+id/layout_label"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/lbl_name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="right|center_vertical"
                android:text="提醒名称"
                android:textColor="@color/application_deep_gray_black"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lbl_money"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="right|center_vertical"
                android:text="每期金额"
                android:textColor="@color/application_deep_gray_black"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lbl_date"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="right|center_vertical"
                android:text="首期缴纳时间"
                android:textColor="@color/application_deep_gray_black"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lbl_mechanism"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="right|center_vertical"
                android:text="提醒周期"
                android:textColor="@color/application_deep_gray_black"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lbl_number"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="10dp"
                android:gravity="right|center_vertical"
                android:text="提醒时间"
                android:textColor="@color/application_deep_gray_black"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_circle_rond_n"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="选择提醒名称"
                android:imeOptions="actionNext"
                android:padding="5dip"
                android:textColor="@color/application_black"
                android:textColorHint="@color/application_deep_gray_black"
                android:textSize="@dimen/sixteen" />

            <EditText
                android:id="@+id/edt_money"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_circle_rond_n"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="输入每期金额"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:padding="5dip"
                android:textColor="@color/application_black"
                android:textColorHint="@color/application_deep_gray_black"
                android:textSize="@dimen/sixteen" />

            <EditText
                android:id="@+id/edt_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_circle_rond_n"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="选择首期缴纳时间"
                android:imeOptions="actionNext"
                android:inputType="date"
                android:padding="5dip"
                android:textColor="@color/application_black"
                android:textColorHint="@color/application_deep_gray_black"
                android:textSize="@dimen/sixteen" />

            <EditText
                android:id="@+id/edt_remind_period"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/circle_circle_rond_n"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="选择提醒周期"
                android:imeOptions="actionNext"
                android:padding="5dip"
                android:textColor="@color/application_black"
                android:textColorHint="@color/application_deep_gray_black"
                android:textSize="@dimen/sixteen" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="提前"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edt_day_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/circle_circle_rond_n"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="选择提醒时间"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:padding="5dip"
                    android:textColor="@color/application_black"
                    android:textColorHint="@color/application_deep_gray_black"
                    android:textSize="@dimen/sixteen" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="天"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:gravity="right|center_vertical|top"
            android:paddingTop="4dp"
            android:text="备注"
            android:textColor="@color/application_deep_gray_black"
            android:textSize="16sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edt_note"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.03"
            android:background="@drawable/circle_circle_rond_n"
            android:ems="10"
            android:gravity="center_vertical|top"
            android:hint="如：放款银行、租用地址"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:lines="4"
            android:padding="5dip"
            android:textColor="@color/application_black"
            android:textColorHint="@color/application_deep_gray_black"
            android:textSize="@dimen/sixteen" />
    </LinearLayout>

</LinearLayout>
