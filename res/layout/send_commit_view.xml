<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <RatingBar
                android:id="@+id/ratingBar1"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:stepSize="1"
                android:max="5"
                android:numStars="5"/>

            <EditText
                android:id="@+id/desc"
                android:layout_width="fill_parent"
                android:layout_height="125dip"
                android:layout_marginBottom="20dip"
                android:background="@drawable/circle_circle_rond_n"
                android:gravity="center_vertical|top"
                android:hint="@string/commit_hint"
                android:padding="5dip"
                android:textColor="@color/application_black"
                android:textColorHint="@color/application_deep_gray_black"
                android:textSize="@dimen/forteen" />

            <Button
                android:id="@+id/realse_btn"
                android:layout_width="210dip"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/commit_order_btn"
                android:gravity="center"
                android:text="@string/realse"
                android:textColor="@color/application_deep_gray_black"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>