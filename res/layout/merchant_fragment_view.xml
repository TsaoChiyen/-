<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:orientation="vertical"
    android:overScrollMode="never" >

    <RelativeLayout
        android:id="@+id/shop_tool_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/application_gray" >

        <TextView
            android:id="@+id/btn_shop_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="所有地区"
            android:textColor="@color/application_deep_gray_black"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/shop_tool_bar_layout"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/category_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-48dip"
            android:orientation="horizontal" >

            <include layout="@layout/image_pull_to_refresh_view" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>