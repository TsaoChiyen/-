<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" >

        <TextView
            android:id="@+id/service_title"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:text="在线客服"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/application_deep_gray_black"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_comment_s" />

        <ImageButton
            android:id="@+id/btn_call"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_chat"
            android:src="@drawable/icon_comment_s" />
        
        <TextView
            android:id="@+id/text_service_sumary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/btn_call"
            android:layout_toRightOf="@+id/service_title"
            android:lines="2"
            android:text="客服名称:\n联系电话:12345678901"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

</LinearLayout>
