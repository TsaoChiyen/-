<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/view_page"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="#45cccccc" >

        <com.chengxin.widget.ViewPager
            android:id="@+id/detail_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_alignParentBottom="true" >
        </com.chengxin.widget.ViewPager>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="15dip"
            android:layout_alignParentBottom="true"
            android:layout_margin="3dip" >

            <LinearLayout
                android:id="@+id/layoutCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/imageviewer_progressbar"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progressbar"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_select_item_btn"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_bill_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/devider_line"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/ImageView05"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/shop_info_maintain"
                    android:src="@drawable/billman" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/ImageView05"
                    android:text="账单管理"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_finance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/devider_line"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/goods_manager"
                    android:src="@drawable/finance" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/ImageView03"
                    android:text="融资贷款"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
